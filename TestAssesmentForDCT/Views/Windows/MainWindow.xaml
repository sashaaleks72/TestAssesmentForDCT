<Window x:Class="TestAssesmentForDCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TestAssesmentForDCT.ViewModels"
        xmlns:models="clr-namespace:TestAssesmentForDCT.Models"
        xmlns:mainPage="clr-namespace:TestAssesmentForDCT.Pages"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="App" MinHeight="450" MinWidth="850">

    <Window.DataContext>
        <vm:MainViewModel></vm:MainViewModel>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <Button Height="40" Margin="5, 5, 5, 0" Command="{Binding CoinsBtnClickCommand}">Coins</Button>
            <Button Height="40" Margin="5, 5, 5, 0" Command="{Binding ExchangesBtnClickCommand}">Exchanges</Button>
        </StackPanel>

        <Frame Grid.Column="1" Content="{Binding CurrentPage}" Opacity="{Binding FrameOpacity}" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
